package core.main;

import java.util.Scanner;

public class LinearSearch1 {
	
	public static void linSearch(int[] abc , int n ) {
		for(int i = 0; i < abc.length ; i++) {
			if(abc[i] == n) {
				System.out.println("Yes it exists at index : " + i);
				break;
			}
			
		}
		
	}
	
	
	public static boolean linSearchInstring(String s , int target) {
		if (s.length() == 0) {
			return false;
		}
		for (int i=0 ; i < s.length();i++ ) {
			if (target == s.charAt(i)){
				System.out.println("IT EXISTS AT INDEX : " + i);
				return true;
				
			}
		}
	return false;
	
	
	}
	
	
	public static void main(String[] args) {
//		Scanner sc = new Scanner(System.in);
//		int[] arr = new int[8];
//		for(int j = 0; j < arr.length; j++ ) {
//			arr[j] = sc.nextInt();
//		}
//		System.out.println("Enter the number you want to find in the array : ");
//		int b = sc.nextInt();
//		
//		linSearch(arr , b);

		String sa = "VatsalGarg";
		char c = 'a';
		
		
		boolean abc = linSearchInstring(sa,c);
		System.out.println(abc);
		
		
		
		
	
	}

}
