package core.main;

import java.util.Arrays;

public class reverse {
	
	
	static void swap(int[] arr, int i , int j) {
		
		int temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp;
		
		
		
	
	}
	
	
	static void rev(int[] arr ) {
		
		int start = 0;
		int end = arr.length - 1;
		
		
		while(start < end ) {
			swap(arr, start , end );
			start++;
			end--;
		}
		
	}
	public static void main(String[] args) {
		int[] arr = {1, 3 , 5 ,23 ,54};
		
		rev(arr);
		System.out.println(Arrays.toString(arr));
		
		
	

	}

}
