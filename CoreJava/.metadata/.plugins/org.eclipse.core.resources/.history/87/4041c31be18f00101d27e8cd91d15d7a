package core.main;



// https://leetcode.com/problems/find-smallest-letter-greater-than-target/
public class SmallestLetterGreaterThanTar {

    public static char nextGreatestLetter(char[] letters, char target) {
        int s = 0;
        int e = letters.length - 1;

        while (s <= e) {
            int m = s + (e - s) / 2;

            if (letters[m] > target) {
                e = m - 1;
            } else {
                s = m + 1;
            }
        }

        return letters[s % letters.length]; // Handles wrap-around
    }

    public static void main(String[] args) {
        char[] abc = {'c', 'f', 'j'};
        char d = 'c';

        System.out.println(nextGreatestLetter(abc, d)); // Output: f
    }
}
